<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="theme-color" content="#00416B">

<!-- SEO Open Graph tags -->
<meta property="og:title" content="{% if title is defined %}{{ title }} - {% endif %}{{ siteName }}">
<meta property="og:description" content="{% if description is defined %}{{ description }}{% endif %}">
<meta property="og:image" content="{% if image is defined %}{{ image }}{% endif %}">