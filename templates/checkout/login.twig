
{% if currentUser %}
    {% redirect 'checkout' %}
{% endif %}

{% extends "_layouts/react" %}
{% includeJsFile "/dist/js/checkout-login.bundle.js" %}
{% includeCssFile "/dist/css/checkout-login.bundle.css" %}

{% set token %}
    window.csrfTokenValue = "{{ craft.app.request.csrfToken }}";
    window.checkoutRedirect = "{{ '/checkout' | hash }}";
{% endset %}
{% includeJs token first %}
