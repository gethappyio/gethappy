
{% if currentUser %}
    {% redirect 'checkout' %}
{% endif %}

{% extends "_dist/checkout-login.boilerplate" %}
{% set setSession = craft.addSession("newuser-redirect","checkout") %}
{% set token %}
    window.csrfTokenValue = "{{ craft.app.request.csrfToken }}";
    window.checkoutRedirect = "{{ '/checkout' | hash }}";
{% endset %}
{% includeJs token first %}
